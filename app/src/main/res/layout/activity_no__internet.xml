<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.No_Internet">

   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="221dp"
           android:layout_marginTop="250dp"
           android:gravity="center"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent">

           <ImageView
               android:id="@+id/imageView"
               android:layout_width="316dp"
               android:layout_height="221dp"
               android:src="@drawable/wifi_off"

               />


       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="143dp"
           android:gravity="center"
           android:layout_marginTop="40dp"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent">
           <TextView
               android:id="@+id/textView"
               android:layout_width="match_parent"
               android:layout_height="143dp"
   android:padding="10dp"
               android:gravity="center_horizontal"
               android:fontFamily="@font/font_2"
               android:text="No Internet Connection detected:"
               android:textColor="@color/dark_navy_blue"
               android:textSize="30dp"
               android:textStyle="bold" />

       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="68dp"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent"
           android:layout_marginTop="130dp">
           <TextView
               android:id="@+id/textView2"
               android:layout_width="match_parent"
               android:layout_height="68dp"
              android:padding="10dp"
               android:fontFamily="@font/font_2"
               android:layout_marginLeft="10dp"
               android:layout_marginRight="10dp"
               android:gravity="center"
               android:text="Please check your network connectivity and restart MobiDoc."
               android:textColor="#C80505"
               android:textSize="15sp"
               />
       </LinearLayout>

   </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>