<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".ui.registration.PatientRegisterActivityTwo">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:text="WELCOME TO MOBIDOC"

            android:textAlignment="center"
            android:textColor="@color/dark_navy_blue"
            android:textSize="30sp"
            android:fontFamily="@font/font_2"/>


        <EditText
            android:id="@+id/medicationHistoryET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:translationY="170dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/ic_medication"
            android:drawablePadding="9dp"
            android:hint="Medication History"
            android:inputType="textPersonName"
            android:maxLines="1"

            android:textColor="@android:color/black" />


        <EditText
            android:id="@+id/diseaseHistoryET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"

            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/ic_disease"
            android:drawablePadding="9dp"
            android:hint="Disease Histroy"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:translationY="120dp" />


        <EditText
            android:id="@+id/allergiesET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:translationY="220dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/ic_allergies"
            android:drawablePadding="9dp"
            android:hint="Allergies"
            android:inputType="textEmailAddress"
            android:maxLines="1"

            android:textColor="@android:color/black" />


        <Button
            android:id="@+id/registerBTN"
            android:layout_width="270dp"
            android:layout_height="wrap_content"

            android:layout_centerHorizontal="true"

            android:translationY="300dp"
            android:fontFamily="@font/font_2"
            android:text="Register"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColorHighlight="@color/dark_blue"
            app:cornerRadius="40dp"
            app:iconTint="@color/dark_blue" />

        <Button
            android:id="@+id/backBTN"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/font_2"
            android:text="Back"
            android:textColorHighlight="@color/dark_blue"
            android:textSize="17sp"
            android:textStyle="bold"
            android:translationY="100dp"
            android:visibility="invisible"
            app:cornerRadius="40dp"
            app:iconTint="@color/dark_blue" />

        <TextView
            android:id="@+id/haveAccountTW"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="530dp"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:text="Already have account? Login"
            android:textAlignment="center"
            android:textColor="#8BC34A"
            android:fontFamily="@font/font_2"
            android:translationY="160dp" />



    </RelativeLayout>

</ScrollView>
