<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profiles.Doctor_EditProfileActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:paddingTop ="50dp"
        android:text="Edit Patient Profile"
        android:fontFamily="@font/font_2"
        android:textAlignment = "center"
        android:textColor="@color/dark_navy_blue"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@drawable/divider"
            android:orientation="vertical"
            android:gravity="center_horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:background="@android:color/transparent"
                android:hint="You cannot change your Email Address for Security Purposes "
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/holo_red_light"
                android:textSize="15dp"
                android:gravity="center"
                android:fontFamily="@font/font_2"
                android:textStyle="bold"
                android:translationY="100dp" />


            <EditText
                android:id="@+id/doc_fNameET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_person_black_24dp"
                android:drawablePadding="9dp"
                android:hint="First Name"
                android:inputType="textPersonName"
                android:textColor="@android:color/black"
                android:translationY="130dp" />

            <EditText
                android:id="@+id/doc_lNameET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_person_black_24dp"
                android:drawablePadding="9dp"
                android:hint="Surname"
                android:inputType="textPersonName"
                android:textColor="@android:color/black"
                android:translationY="150dp" />


            <EditText
                android:id="@+id/doc_experienceET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_book_black"
                android:drawablePadding="9dp"
                android:hint="Experience ( in years )"
                android:inputType="textPersonName"
                android:textColor="@android:color/black"
                android:translationY="170dp" />


            <EditText
                android:id="@+id/doc_spec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_medication"
                android:drawablePadding="9dp"
                android:hint="Specialization"
                android:inputType="textPersonName"
                android:textColor="@android:color/black"
                android:translationY="190dp" />

            <EditText
                android:id="@+id/doc_qualify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_book_black_24dp"
                android:drawablePadding="9dp"
                android:hint="Qualifications"
                android:inputType="textPersonName"
                android:textColor="@android:color/black"
                android:translationY="210dp" />


            <Button
                android:id="@+id/doc_update_details"
                android:text="Update"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/font_2"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColorHighlight="@color/dark_blue"
                app:cornerRadius="40dp"
                android:translationY="230dp" />

            <Button
                android:id="@+id/doc_profile_page"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_2"
                android:text="Profile"
                android:textColorHighlight="@color/dark_blue"
                app:cornerRadius="40dp"
                android:textSize="17sp"
                android:textStyle="bold"
                android:translationY="235dp" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>